<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="imagePane" alignment="CENTER"
      style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 20, 0, 0, 0);" stylesheets="@../Css/mainStyle.css"
      xmlns="http://javafx.com/javafx/21"
      fx:controller="com.tourism.asianex.Controllers.CityController">
    <children>
        <Pane prefHeight="250.0" prefWidth="370.0">
            <children>
                <ImageView fx:id="image" fitHeight="250.0" fitWidth="370.0" pickOnBounds="true" smooth="false"/>
                <HBox layoutY="-1.0" prefHeight="251.0" prefWidth="370.0" styleClass="gradient">
                    <children>
                        <VBox alignment="BOTTOM_CENTER" prefHeight="251.0" prefWidth="160.0">
                            <children>
                                <Label alignment="CENTER" prefHeight="44.0" prefWidth="145.0" text="Trip to"
                                       textFill="WHITE">
                                    <font>
                                        <Font name="Cosmata Regular" size="25.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="name" alignment="CENTER" prefHeight="35.0" prefWidth="150.0" text="India"
                                       textFill="WHITE">
                                    <font>
                                        <Font name="Cosmata Extra Bold" size="25.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="20.0"/>
                                    </VBox.margin>
                                </Label>
                            </children>
                        </VBox>
                        <Pane prefHeight="251.0" prefWidth="90.0" HBox.hgrow="ALWAYS"/>
                        <VBox alignment="BOTTOM_LEFT" prefHeight="231.0" prefWidth="145.0">
                            <children>
                                <Label fx:id="noOfDays" alignment="CENTER" prefHeight="44.0" prefWidth="139.0"
                                       text="4 Days" textFill="WHITE">
                                    <font>
                                        <Font name="Cosmata Regular" size="25.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="price" alignment="CENTER" prefHeight="35.0" prefWidth="139.0"
                                       text="\$1200" textFill="WHITE">
                                    <font>
                                        <Font name="Cosmata Regular" size="25.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="20.0"/>
                                    </VBox.margin>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </Pane>
    </children>
    <styleClass>
        <String fx:value="round-img-pane"/>
        <String fx:value="shadow"/>
    </styleClass>
</HBox>
