<Pane xmlns:fx="http://javafx.com/fxml/1" styleClass="bg-round" stylesheets="@../Css/mainStyle.css"
      xmlns="http://javafx.com/javafx/21" fx:controller="com.tourism.asianex.Controllers.VisitorsController">
    <children>
        <HBox layoutX="10.0" layoutY="96.0" prefHeight="495.0" prefWidth="785.0">
            <children>
                <MFXPaginatedTableView fx:id="visitorsTable" prefHeight="493.0" prefWidth="811.0" rowsPerPage="14"
